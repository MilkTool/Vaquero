(sys.test 'while
    (let (i (box 0) total (box 0))
        (def rv
            (while (< i.val 20)
                (total.set! (+ total.val i.val))
                (i.set! i.val.inc)
                (list i.val total.val)))
        (= rv '(20 190))))

(sys.test 'while-next
    (let (i (box 0) total (box 0))
        (def rv
            (while (< i.val 20)
                (i.set! i.val.inc)
                (when (mod i.val 3)
                    (next (list 'next i.val total.val)))
                (total.set! (+ total.val i.val))
                (list i.val total.val)))
        (= rv '(next 20 63))))

(sys.test 'while-last
    (let (i (box 0) total (box 0))
        (def rv
            (while (< i.val 20)
                (i.set! i.val.inc)
                (when (> total.val 30)
                    (last (list 'last i.val total.val)))
                (total.set! (+ total.val i.val))
                (list i.val total.val)))
        (= rv '(last 9 36))))

