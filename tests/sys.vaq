; sys.xyzzy

(test srand
   (def seed "16384")
   (sys.srand seed)
   (def rand1 (rand))
   (sys.srand seed)
   (def rand2 (rand))
   (sys.srand seed)
   (def rand3 (rand))
   (and (= rand1 rand2) (= rand2 rand3)))

